--- a/css/slots.css
+++ b/css/slots.css
@@ -644,3 +644,70 @@ body[data-slot-skin="clockwork"] .reelCol{ background: rgba(10,10,14,0.26); }
 }
 .reelsWrap.tease-coins .reelCol{ animation: vvPulse .55s ease-in-out 1; }
 .reelsWrap.tease-scatters .reelCol{ animation: vvPulse .55s ease-in-out 1; }
+
+/* ==========================================
+   FULL SCREEN SLOTS CABINET LAYOUT
+   ========================================== */
+
+html, body{
+  height:100%;
+}
+
+body{
+  display:flex;
+  align-items:center;
+  justify-content:center;
+  overflow:hidden;
+}
+
+/* Main cabinet wrapper */
+.slotsShell{
+  width:100%;
+  height:100vh;
+  display:flex;
+  flex-direction:column;
+  align-items:center;
+  justify-content:center;
+}
+
+/* Center cabinet and give proper size */
+.reelsWrap{
+  width:min(1100px, 95vw);
+  height:min(600px, 70vh);
+  display:grid;
+  grid-template-columns: repeat(5, 1fr);
+  gap: 18px;
+  padding: 24px;
+  box-sizing:border-box;
+}
+
+.reelCol{
+  display:grid;
+  grid-template-rows: repeat(3, 1fr);
+  gap:16px;
+}
+
+.reelCol .cell,
+.reelCol .reel-cell{
+  width:100%;
+  aspect-ratio:1/1;
+  background:rgba(0,0,0,0.35);
+  border-radius:18px;
+  display:flex;
+  align-items:center;
+  justify-content:center;
+}
+
+/* Make symbols larger */
+.cell .symImg,
+.reel-cell .symImg{
+  width:92%;
+  height:92%;
+}
+
+@media (max-width: 900px){
+  .reelsWrap{
+    height:65vh;
+    gap:12px;
+  }
+}
