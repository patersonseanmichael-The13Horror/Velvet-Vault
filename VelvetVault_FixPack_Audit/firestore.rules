rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function signedIn() { return request.auth != null; }
    function isOwner(uid) { return signedIn() && request.auth.uid == uid; }

    // Users: readable by owner, balance not writable by client
    match /users/{uid} {
      allow read: if isOwner(uid);

      // Client may update ONLY displayName (optional), never balance.
      allow create: if isOwner(uid);
      allow update: if isOwner(uid)
        && request.resource.data.diff(resource.data).changedKeys().hasOnly(["displayName"]);
      allow delete: if false;

      // Ledger subcollection: server-only writes
      match /ledger/{entryId} {
        allow read: if isOwner(uid);
        allow write: if false;
      }
    }

    // Locks: server-only
    match /payoutLocks/{docId} { allow read, write: if false; }
    match /debitLocks/{docId} { allow read, write: if false; }

    // Manual reviews: user can create request doc only via function (server writes)
    match /manualReviews/{docId} {
      allow read: if signedIn() && resource.data.uid == request.auth.uid;
      allow write: if false;
    }
  }
}
