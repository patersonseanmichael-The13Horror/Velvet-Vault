 .reelsWrap.tease-scatters .reelCol{ animation: vvPulse .55s ease-in-out 1; }
+
+/* ==========================================
+   FULL SCREEN SLOTS CABINET LAYOUT
+   ========================================== */
+
+html, body{
+  height:100%;
+}
+
+body{
+  display:flex;
+  align-items:center;
+  justify-content:center;
+  overflow:hidden;
+}
+
+/* Main cabinet wrapper */
+.slotsShell{
+  width:100%;
+  height:100vh;
+  display:flex;
+  flex-direction:column;
+  align-items:center;
+  justify-content:center;
+}
+
+/* Center cabinet and give proper size */
+.reelsWrap{
+  width:min(1100px, 95vw);
+  height:min(600px, 70vh);
+  display:grid;
+  grid-template-columns: repeat(5, 1fr);
+  gap: 18px;
+  padding: 24px;
+  box-sizing:border-box;
+}
+
+.reelCol{
+  display:grid;
+  grid-template-rows: repeat(3, 1fr);
+  gap:16px;
+}
+
+.reelCol .cell,
+.reelCol .reel-cell{
+  width:100%;
+  aspect-ratio:1/1;
+  background:rgba(0,0,0,0.35);
+  border-radius:18px;
+  display:flex;
+  align-items:center;
+  justify-content:center;
+}
+
+/* Make symbols larger */
+.cell .symImg,
+.reel-cell .symImg{
+  width:92%;
+  height:92%;
+}
+
+@media (max-width: 900px){
+  .reelsWrap{
+    height:65vh;
+    gap:12px;
+  }
+}
+
+/* ==========================================
+   SLOTS GAME MODE (when ?m=machine active)
+   ========================================== */
+
+.slotsPage.gameMode{
+  display:flex;
+  flex-direction:column;
+  height:100vh;
+  overflow:hidden;
+}
+
+/* Hide themed machine layout when game active */
+.slotsPage.gameMode .leftColumn,
+.slotsPage.gameMode .rightColumn,
+.slotsPage.gameMode .pageTitle{
+  display:none !important;
+}
+
+/* Expand reels full screen */
+.slotsPage.gameMode .reelsWrap{
+  flex:1;
+  width:100%;
+  max-width:1400px;
+  margin:0 auto;
+  height:80vh;
+}
+
+/* Center cabinet */
+.slotsPage.gameMode{
+  align-items:center;
+  justify-content:center;
+}
