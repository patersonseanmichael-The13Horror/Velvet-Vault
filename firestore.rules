rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isAuthed() {
      return request.auth != null;
    }

    function isOwner(uid) {
      return isAuthed() && request.auth.uid == uid;
    }

    function isAdmin() {
      return isAuthed() &&
        request.auth.token.email == "patersonseanmichael@gmail.com";
    }

    /* ============================
       WALLETS
       ============================ */

    match /wallets/{uid} {

      // User can read their own wallet
      allow read: if isOwner(uid);

      // User can update only limited fields (cash, bonus deducted via client)
      allow update: if isOwner(uid)
        && request.resource.data.diff(resource.data).affectedKeys()
            .hasOnly(["cash", "bonus", "rolloverRemaining", "updatedAt"]);

      // Only admin can create or override wallet structure
      allow create, delete: if isAdmin();
    }

    /* ============================
       TRANSACTIONS
       ============================ */

    match /transactions/{uid}/items/{txId} {

      // User can read their own transaction history
      allow read: if isOwner(uid);

      // User can create transaction logs for themselves
      allow create: if isOwner(uid);

      // No editing or deleting transactions
      allow update, delete: if false;
    }

    /* ============================
       USERS (Profile Area)
       ============================ */

    match /users/{uid} {
      allow read, update: if isOwner(uid);
      allow create: if isOwner(uid);
      allow delete: if false;
    }

    /* ============================
       GLOBAL DENY
       ============================ */

    match /{document=**} {
      allow read, write: if false;
    }
  }
}
